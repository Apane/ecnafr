<div id="content-signup">
  <%= render 'layouts/messages' %>
  <%= render 'layouts/headers/header_sign_up_step2' %>
  <br/><br/>

  <div class="container">
  <br><br>
  <br><br>
  <br><br>
  <br><br>
  
  <div class="row">
    <div class="push-down">
     <div class="col-xs-12 col-md-12">
      <h1 style="color: white; text-align: center; font-family: 'cavier'; font-size: 65px; font-weight: 900;">
      </h1>
    </div>

