/* The CSS */
select {
    padding:7px 40px 7px 40px;
    margin: 0;
    -webkit-border-radius:10px;
    -moz-border-radius:10px;
    border-radius:10px;
	background: rgb(255, 255, 255) transparent;
	/* nice browsers */
	background: rgba(255, 255, 255, 0.8);    
    border:none;
    outline:none;
    display: inline-block;
    -webkit-appearance:none;
    -moz-appearance:none;
    appearance:none;
    cursor:pointer;
    border: 2px solid white; 
}

/* Targetting Webkit browsers only. FF will show the dropdown arrow with so much padding. */
@media screen and (-webkit-min-device-pixel-ratio:0) {
    select {padding-right:18px}
}

.modal-open {
  overflow:auto;
}

body.modal-open,
.modal-open .navbar-fixed-top,
.modal-open .navbar-fixed-bottom {
  margin-right: 0px;
}

.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1040;
  display: none;
  overflow:hidden;

}


.modal-content {
position: relative;
background: -moz-linear-gradient(left, rgba(53, 53, 53, 0.88) 0%, rgba(53, 53, 53, 0.88) 100%);
background: -webkit-gradient(linear, left top, right top, color-stop(0%, rgba(53, 53, 53, 0.88)), color-stop(100%, rgba(53, 53, 53, 0.88)));
background: -webkit-linear-gradient(left, rgba(53, 53, 53, 0.88) 0%, rgba(53, 53, 53, 0.88) 100%);
background: -o-linear-gradient(left, rgba(53, 53, 53, 0.88) 0%, rgba(53, 53, 53, 0.88) 100%);
background: -ms-linear-gradient(left, rgba(53, 53, 53, 0.88) 0%, rgba(53, 53, 53, 0.88) 100%);
background: linear-gradient(to right, rgba(53, 53, 53, 0.88) 0%, rgba(53, 53, 53, 0.88) 100%);
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#e0353535', endColorstr='#e0353535',GradientType=1 );
border: none;
border-radius: 0;
outline: none;
-webkit-box-shadow: none;
box-shadow: none;
background-clip: padding-box;

}

